{
	"extends": "@guardian/tsconfig",
	"compilerOptions": {
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": true,
		"target": "ES2020"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "coverage"],
	"ts-node": { "compilerOptions": { "module": "commonjs" } }
}
