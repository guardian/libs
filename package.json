    "prepush:test": "jest --runInBand --onlyChanged --coverage=false",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "tsc": "tsc --noEmit --project tsconfig.dev.json",
    "validate": "npm-run-all tsc lint test build"
  },
  "devDependencies": {
    "@guardian/eslint-config": "0.6.0",
    "@guardian/eslint-config-typescript": "0.6.0",
    "@guardian/pkgu": "0.6.0",
    "@guardian/prettier": "0.6.0",
    "@rollup/plugin-typescript": "8.2.3",
    "@semantic-release/github": "7.2.3",
    "@types/jest": "26.0.24",
    "@types/wcag-contrast": "3.0.0",
    "conventional-changelog-conventionalcommits": "4.6.0",
    "eslint": "7.30.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-fetch-mock": "3.0.3",
    "mockdate": "3.0.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "rollup": "2.53.1",
    "rollup-plugin-size": "0.2.2",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "17.4.4",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "tslib": "2.3.0",
    "typescript": "4.3.5",
    "wcag-contrast": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
