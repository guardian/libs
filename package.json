{
  "name": "@guardian/libs",
  "version": "0.0.0-this-never-updates-in-source-code-refer-to-git-tags",
  "private": false,
  "description": "A collection of JavaScript libraries for Guardian projects",
  "homepage": "https://github.com/guardian/libs#readme",
  "bugs": {
    "url": "https://github.com/guardian/libs/issues"
  },
  "repository": "https://github.com/guardian/libs.git",
  "license": "Apache-2.0",
  "author": "Guardian developers",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "unpkg": "dist/umd/index.min.js",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm-run-all clean --parallel compile:*",
    "clean": "rm -rf dist",
    "compile:common": "tsc --project ./tsconfig.build.json --outDir ./dist/cjs --module CommonJS",
    "compile:esm": "tsc --project ./tsconfig.build.json --outDir ./dist/esm",
    "compile:umd": "rollup -c",
    "lint": "eslint . --ext .js,.ts",
    "prepush:test": "jest --runInBand --onlyChanged --coverage=false",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "validate": "npm-run-all tsc lint test build"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm-run-all prepush:*"
    }
  },
  "devDependencies": {
    "@guardian/eslint-config": "0.4.0",
    "@guardian/eslint-config-typescript": "0.4.1",
    "@guardian/prettier": "0.4.1",
    "@rollup/plugin-typescript": "6.1.0",
    "@semantic-release/github": "7.2.0",
    "@types/jest": "26.0.15",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "jest-fetch-mock": "3.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rollup": "2.33.1",
    "rollup-plugin-size": "0.2.2",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "17.2.3",
    "ts-jest": "26.4.4",
    "tslib": "2.0.3",
    "typescript": "4.0.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
