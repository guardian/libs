{
	"name": "@guardian/libs",
	"version": "1.0.0",
	"private": false,
	"description": "A collection of shared JavaScript libraries for use in Guardian projects",
	"homepage": "https://github.com/guardian/libs#readme",
	"bugs": {
		"url": "https://github.com/guardian/libs/issues"
	},
	"repository": "https://github.com/guardian/libs.git",
	"license": "Apache-2.0",
	"author": "Guardian developers",
	"sideEffects": false,
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"source": "src/index.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "npm-run-all clean --parallel compile:*",
		"clean": "rm -rf dist",
		"commit": "cz",
		"compile:common": "tsc --project ./tsconfig.build.json --outDir ./dist/cjs --module CommonJS",
		"compile:esm": "tsc --project ./tsconfig.build.json --outDir ./dist/esm",
		"lint": "eslint .",
		"prepush:test": "jest --runInBand --onlyChanged --coverage=false",
		"test": "jest",
		"tsc": "tsc --noEmit",
		"validate": "npm-run-all tsc lint test build"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS HUSKY_USE_YARN > /dev/null 2>&1 || (echo \"\n\u001b[0;31mâœ– Invalid commit message\u001b[0m \u001b[2mhttps://git.io/JUzbH\u001b[0m\nTry \u001b[0;36myarn commit\u001b[0m instead\n\" && exit 1)",
			"pre-push": "npm-run-all prepush:*"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/github": "^7.1.1",
		"@types/jest": "^26.0.14",
		"@typescript-eslint/eslint-plugin": "^4.3.0",
		"@typescript-eslint/parser": "^4.3.0",
		"commitizen": "^4.2.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^7.10.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.0.2",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.3.0",
		"jest": "^26.5.0",
		"jest-environment-jsdom-sixteen": "^1.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"semantic-release": "^17.1.2",
		"ts-jest": "^26.4.1",
		"typescript": "^4.0.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
